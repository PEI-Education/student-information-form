        </div>
        {{else}}
          {{#if extended_alert_medical}}
          <table class="border">
            <thead>
              <tr>
                <th>Alerte médicale prolongée</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>{{{ extended_alert_medical }}}</td>
              </tr>
